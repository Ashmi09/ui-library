{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "target": "ES2023",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "**/*/*.stories.tsx"
    ]
}